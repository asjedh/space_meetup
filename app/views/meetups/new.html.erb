<form action="/meetups" method="post" class="new-meetup">

  <div class="form-wrapper">
    <label for="meetup[name]">Name: </label>
    <input type="text" name="meetup[name]" placeholder="please enter name of meetup" >
  </div>

  <div class="form-wrapper">
    <label for="meetup[location]">Location: </label>
    <input type="text" name="meetup[location]" placeholder="please enter location of meetup" >
  </div>

  <div class="form-wrapper">
    <label for="meetup[description]">Description: </label>
    <textarea name="meetup[description]" rows="5" cols="80" placeholder="please enter description of meetup" ></textarea>
  </div>

  <div>
    <input type="submit" value="Save meetup">
  </div>

</form>
